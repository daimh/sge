<?xml version="1.0"?>
<!DOCTYPE profile>
<profile
  xmlns="http://www.suse.com/1.0/yast2ns"
  xmlns:config="http://www.suse.com/1.0/configns">
  <general>
    <mode>
      <confirm config:type="boolean">false</confirm>
      <halt config:type="boolean">true</halt>
    </mode>
  </general>
  <partitioning config:type="list">
    <drive>
      <device>/dev/sda</device>
      <partitions config:type="list">
        <partition>
          <filesystem config:type="symbol">xfs</filesystem>
          <size>49G</size>
          <mount>/</mount>
        </partition>
      </partitions>
    </drive>
  </partitioning>
  <scripts>
    <post-scripts config:type="list">
       <script>
         <filename>my-post-install.sh</filename>
         <interpreter>shell</interpreter>
         <source><![CDATA[
#!/bin/bash
set -ex
systemctl stop sshd
mkdir /root/.ssh
chmod 700 /root/.ssh
echo "AUTHORIZED_KEYS" > /root/.ssh/authorized_keys 
echo sge-leap > /etc/hostname
hostname sge-leap
echo -e "10.0.2.15\tsge-leap" >> /etc/hosts
echo -e "BOOTPROTO=dhcp\nSTARTMODE=auto" > /etc/sysconfig/network/ifcfg-eth0
ifup eth0
systemctl enable sshd
]]>
         </source>
       </script>
    </post-scripts>
  </scripts>
  <software>
    <packages config:type="list">
      <package>openssh</package>
      <package>rsync</package>
    </packages>
    <do_online_update config:type="boolean">true</do_online_update>
  </software>
  <users config:type="list">
    <user>
      <encrypted config:type="boolean">false</encrypted>
      <user_password>SomeGridEngine</user_password>
      <username>root</username>
    </user>
  </users>
</profile>
