if ($KRB == 1) then
   switch ($BUILDARCH)
    case HP11:
      set KLIBS = "-lcrypto"
      breaksw
   default:
      set KLIBS = ""
   endsw
endif

if ($MUNGE == 1) then
   set SECLIB = "-lmunge $SECLIB"
   set CFLAGS = "-DHAVE_MUNGE $CFLAGS"
endif

